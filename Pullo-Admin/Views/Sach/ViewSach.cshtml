@{
    ViewData["Title"] = "Update Sách";
}
@model Sach
@{
    <h2>UPDATE SÁCH</h2>
    <form action="/Sach/UpdateSach" method="post">
        <div class="form-group">
            <div class="col-md-8">
                <label>ISBN</label>
                <input type="text" class="form-control" name="ISBN" value="@Model.ISBN" readonly />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Tên sách</label>
                <input type="text" class="form-control" name="TENSACH" value="@Model.TENSACH" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Tác giả</label>
                <input type="text" class="form-control" name="TACGIA" value="@Model.TACGIA" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Mô tả</label>
                <input type="text" class="form-control" name="MOTA" value="@Model.MOTA" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Số lượng</label>
                <input type="text" class="form-control" name="SOLUONG" value="@Model.SOLUONG" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Giá tiền</label>
                <input type="text" class="form-control" name="GIATIEN" value="@Model.GIATIEN" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Mã danh mục</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>Chọn mã danh mục</option>
                    <!-- nghiên cứu cái này nha -->
                </select>
            </div>
        </div>
        <div class="row mb-6">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-group">
                    <div class="col-md-6">
                        <input class="btn btn-success btn-sm" type="submit" name="submit" value="Update" />
                    </div>
                </div>
            </div>

            <div class="col">
                <a asp-area="" asp-controller="Sach" asp-action="Index"><i class="btn btn-warning btn-sm">Trở lại</i></a>
            </div>
        </div>
    </form>
}
