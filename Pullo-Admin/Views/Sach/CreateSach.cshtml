
@{
    ViewBag.Title = "CreateSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <h4>THÊM SÁCH</h4>

        

    <form action="/Sach/ThemSach" method="post">
        <div class="form-group">
            <div class="col-md-8">
                <label>Tên sách</label>
                <input type="text" class="form-control" name="TENSACH" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Tác giả</label>
                <input type="text" class="form-control" name="TACGIA" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Mô tả</label>
                <input type="text" class="form-control" name="MOTA" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Số lượng</label>
                <input type="text" class="form-control" name="SOLUONG" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Giá tiền</label>
                <input type="text" class="form-control" name="GIATIEN" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Địa chỉ hình ảnh</label>
                <input type="text" class="form-control" name="URL" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Mã danh mục</label>
                <input type="text" class="form-control" name="MADM" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label>Mã danh mục</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>Chọn mã danh mục</option>
                    <!-- nghiên cứu cái này nha -->
                </select>
            </div>
        </div>
        <div class="row mb-6">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-group">
                    <div class="col-md-6">
                        <input type="submit" value="Tạo" class="btn btn-success btn-md" />
                    </div>
                </div>
            </div>

            <div class="col">
                <a asp-area="" asp-controller="Sach" asp-action="Index"><i class="btn btn-warning btn-md">Trở lại</i></a>
            </div>
        </div>
    </form>

        <!-- 2 column grid layout for inline styling -->
        
</body>

